{
  "name": "hydraulic-network-webapp",
  "version": "1.0.0",
  "description": "Web application for hydraulic network analysis",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --watch --verbose",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "zustand": "^4.4.0",
    "axios": "^1.4.0",
    "react-hook-form": "^7.45.0",
    "@hookform/resolvers": "^3.3.0",
    "yup": "^1.3.3",
    "@mui/material": "^5.14.0",
    "@mui/icons-material": "^5.14.0",
    "@emotion/react": "^13.2.0",
    "@emotion/styled": "^13.2.0",
    "reactflow": "^11.0.0",
    "recharts": "^2.8.0",
    "jspdf": "^2.5.1",
    "xlsx": "^0.18.5",
    "chart.js": "^3.9.1",
    "react-chartjs-2": "^4.2.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "clsx": "^2.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.3.0",
    "@types/lodash": "^4.14.195",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "@vitejs/plugin-react": "^4.0.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/user-event": "^14.4.0",
    "@jest/globals": "^29.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.1.0",
    "babel-jest": "^29.6.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "eslint": "^8.44.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-testing-library": "^5.11.0",
    "eslint-plugin-jest": "^27.2.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "cypress": "^12.17.0",
    "@cypress/code-coverage": "^3.12.0",
    "@testing-library/cypress": "^8.0.0",
    "cypress-axe": "^1.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "./jest.config.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
